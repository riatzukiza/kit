(type File (inode (event inode.event))

      (gett path (inode )
            inode.path)
      (gett string  ()
            (read-file this.path "utf8"))
      (sett string (data) (pipe (Promise.resolve data)
                                (then str (write-file this.path  str))))

      (gett buffer  ()
            (read-file this.path))
      (sett buffer (data) (pipe  (Promise.resolve data)
                                 (then buf (write-file this.path buf))))
      (generics (evented mth) (delete  (path) (unlink path)))
      )



(export File)
